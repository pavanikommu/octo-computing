package com.routeone.interview;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class StoreRegisterTest
{
  public static void main(String s[])
  {
    String cont = "n";
    StoreRegister s1 = new StoreRegister();
    File f = new File("inventory.csv");
    try
    {
      s1.loadInventory(f);
    }
    catch (FileNotFoundException e)
    {
      // TODO Auto-generated catch block
      e.printStackTrace();
    }
    Scanner scan = new Scanner(System.in);
    String itemName;
    List<String> itemlist = new ArrayList<String>();
    do
    {
      System.out.println("Please enter the item name");
      itemName = scan.next();
      itemlist.add(itemName);
      System.out.println("Do you want to continue  enter y/n");
      cont = scan.next();

    } while (cont.equalsIgnoreCase("n"));
    
    Receipt receipt = s1.checkoutOrder(itemlist);
    System.out.println("TOTAL = "+receipt.getFormattedTotal());
    System.out.println("Items = "+receipt.getOrderedItems());
    

    
    
    
  }
}
